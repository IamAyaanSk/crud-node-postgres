<%- include('partials/header', { title: 'Update User' }) %>
<section class="update-user-section">
  <h2>Update User</h2>
  <form
    action="/users/<%= data.id %>?_method=PUT"
    method="POST"
    class="user-form"
  >
    <label for="name">Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      value="<%= data.name %>"
      required
    />

    <label for="email">Email:</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%= data.email %>"
      required
    />

    <button type="submit">Update User</button>
  </form>

  <form
    action="/users/<%= data.id %>?_method=DELETE"
    method="POST"
    class="delete-form"
  >
    <input type="hidden" name="_method" value="DELETE" />
    <button type="submit" class="delete-button">Delete User</button>
  </form>
</section>
<%- include('partials/footer') %>
